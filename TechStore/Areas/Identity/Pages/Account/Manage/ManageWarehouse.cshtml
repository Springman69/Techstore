@page
@model TechStore.Areas.Identity.Pages.Account.Manage.ManageWarehouseModel
@{
    ViewData["Title"] = "Products";
}

<h1>Lista produktów</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nr.</th>
            <th>Zdjęcie</th>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Ilość</th>
            <th>Zarządzaj</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>
                    <img src="@product.Image" alt="Miniatura" style="max-width: 90px; max-height: 90px;" />
                </td>
                <td>@product.Name</td>
                <td>@product.Price zł</td>
                <td>@product.Quantity szt.</td>
                <td class="d-flex justify-content-between align-items-center">
                    <a asp-page="/Account/Manage/UpdateProduct" asp-route-productId="@product.Id" class="btn btn-primary">Edytuj</a>
                    
                    <form method="post" asp-page-handler="Delete" asp-route-productId="@product.Id">
                        <button type="submit" class="btn btn-danger">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Account/Manage/AddProduct" class="btn btn-success w-100 mt-3">Dodaj produkt</a>