@using Microsoft.AspNetCore.Identity
@using TechStore.Models;
@inject SignInManager<Client> SignInManager
@inject UserManager<Client> UserManager
@inject IViewLocalizer Localizer


<ul class="navbar-nav">
    <li class="nav-item">
        <a id="favBtn" class="nav-link" asp-page="/List"><i class="fa fa-heart-o" style="color:white; font-size: 24px; margin-top: 10px;"></i></a>
    </li>

    <li class="nav-item">
        <a id="cartBtn" class="nav-link" asp-page="/Cart/Cart"><i class="fa fa-shopping-cart fa-lg" style="color:white; font-size: 24px; margin-top: 10px;"></i><span id="cartCount" class="badge badge-primary cartBadge"></span></a>
    </li>

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" style="margin-top: 10px;">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
        </li>
        <li class="nav-item" style="margin-top: 10px;">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-link text-light" style="text-decoration: none; font-weight:bold;">@Localizer["logout"]</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">@Localizer["create"]</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">@Localizer["login"]</a>
        </li>
    }
</ul>
